<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<!-- seo 0119 이름 keyword_curd-mapping.xml 에서 c'ru'd로 수정 -->
<!-- seo 0119 parameterType 소문자로 수정 -->
<mapper namespace="com.mc.innuce.domain.search.dao.CrudDAO">

<select id="oneKeyword" parameterType="String" resultType="keyworddto">
select * from keyword where keyword_content=#{keyword}
</select>

<update id="updateKeyword" parameterType="keyworddto">
update keyword
set keyword_recent_time=now()
where keyword_key=#{keyword_key}
</update>

<!-- seo 01-19 now() -> keyword_recent_time 변경 -->
<insert id="insertKeyword" parameterType="keyworddto" >
insert into keyword(keyword_content,keyword_recent_time) 
values(#{keyword_content}, #{keyword_recent_time});
</insert>

<insert id="insertToKeywordNews" parameterType="java.util.List" >
	insert into keyword_news(keyword_key,news_key) values 
	<foreach collection="array" item="num" separator=",">
	(#{num.keyword_key},#{num.news_key})
	</foreach>
</insert>



</mapper>
