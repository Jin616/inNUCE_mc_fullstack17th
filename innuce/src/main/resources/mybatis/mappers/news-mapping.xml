<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mc.innuce.domain.news.dao.NewsDAO">

	<!-- insert -->
	<insert id="insertListNews" parameterType="java.util.List">
		<foreach collection="list" item="n" separator="," open="insert ignore into news values " close=";">
			(#{n.news_key}, #{n.press_key}, #{n.news_title}, #{n.news_content}, #{n.news_writendate},
			#{n.news_updatedate}, #{n.news_pulldate}, #{n.news_writer}, #{n.news_uri}, #{n.news_originuri},
			#{n.news_deleted}, #{n.news_deleteddate}, #{n.news_deletedcode}, #{n.news_category},
			#{n.news_thumbnailuri}, #{n.news_thumbnailuri2}, #{n.summ_content}, #{n.summ_sentiment},
			#{n.summ_sentimentpercent})
		</foreach>
	</insert>
	
	<insert id="insertNewsHeadline" parameterType="java.util.List"> 
		<foreach collection="list" item="n" separator="," open="insert ignore into news_headline values" close=";">
			(#{n.news_key}, now(), #{n.news_category})
		</foreach>
	</insert>
	
	<!-- select -->
	<select id="selectOneNews">
	select * from news where news_key = #{newsKey};
	</select>
	
	<select id="countAllNews" resultType="int">
	select count(*) from news;
	</select>
	
	<select id="selectNewsListWithKey" resultType="newsdto" parameterType="java.util.List">
	select * from news where in (
	<foreach collection="list" item="n" separator=",">#{n}</foreach>
	);
	</select>
	
	<select id="getAllNewsListOnlyKey" resultType="long">
	select news_key from news;
	</select>
	
	<select id="selectNewsListSearchWithKeyword" resultType="newsdto">
	select * from news
	where news_title like concat("%",#{keyword},"%")
	or news_content like concat("%",#{keyword},"%")
	</select>
	
	<select id="selectHeadLineNews" resultType="newsdto">
	select * from news where news_key in
	(select news_key from news_headline
	where news_category = #{category} order by news_pulldate desc) limit 5;
	
	</select>
	<!-- update -->
	
</mapper>